{
  "manifest_version": 2,

  "name": "CCN Extension",
  "description": "This extension sends clipboard text to CCN",
  "version": "1.0",

  "browser_action": {
   "default_icon": "img/icon.png",
   "default_popup": "popup.html",
    "default_title": "CCN Create Cards"
  },
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "clipboardRead",
    "contextMenus",
    "cookies",
    "http://localhost/",
    "storage",
    "<all_urls>"
  ],
  "icons": {
    "16": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["script.bundle.js"]
    }
  ],
  "content_security_policy": "script-src 'self' http://localhost:5000/; object-src 'self'"
}
