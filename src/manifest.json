{
  "manifest_version": 2,

  "name": "CCN Extension",
  "description": "This extension will send clipboard text to CCN",
  "version": "1.0",

  "browser_action": {
   "default_icon": "img/icon.png",
   "default_popup": "popup.html",
    "default_title": "CCN Create Cards"
  },
  "permissions": [
    "activeTab",
    "clipboardRead",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["script.bundle.js"]
    }
  ],
  "content_security_policy": "script-src 'self' http://localhost:3000/; object-src 'self'"
}
